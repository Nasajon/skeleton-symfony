<?xml version="1.0" encoding="UTF-8"?>
<nsjusecase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/nasajon/mdatransformer/schemas/nsjusecase.xsd" name="estados" label="estados">
    <entity schema="treinamentos" table="estados">
        <fieldmodel name="estado" datatype="integer" isid="true" column="estado"/>
        <fieldmodel name="nome" datatype="string" column="nome"/>
        <fieldmodel name="sigla" datatype="string" column="sigla"/>
        <fieldmodel name="tenant" datatype="integer" column="tenant" />
        <fieldmodel name="created_at" datatype="datetime" column="created_at" />
        <fieldmodel name="created_by" datatype="json" column="created_by" />
        <fieldmodel name="updated_at" datatype="datetime" column="updated_at" />
        <fieldmodel name="updated_by" datatype="json" column="updated_by" />
    </entity>
    <constructors>
        <constructoritem required="true">tenant</constructoritem>
    </constructors>
    <viewbrowser label="Estados" layout="list" paginate="true" target="builtin">
        <fieldsbrowser>
            <fieldbrowser entitylink="estado" isid="true" visible="false" />
            <fieldbrowser entitylink="sigla" visible="true" cansearch="true" />
            <fieldbrowser entitylink="nome" visible="true" cansearch="true"/>
        </fieldsbrowser>
    </viewbrowser>
    <forms>
        <form name="default" label="Estados">
            <layout>
                <headerform>
                    <row>
                        <cell name="sigla" controltype="textedit" label="Sigla" colspan="2" entitylink="sigla">
                            <validates>
                                <validate type="vnull" displaytext="O campo sigla não pode ser vazio."/>
                            </validates>
                        </cell>
                    </row>
                    <row>
                        <cell name="nome" controltype="textedit" label="Nome" colspan="6" entitylink="nome">
                            <validates>
                                <validate type="vnull" displaytext="O campo nome não pode ser vazio."/>
                            </validates>
                        </cell>
                    </row>
                </headerform>
            </layout>
        </form>
    </forms>
    <actions>
        <action>
            <name>retrieve</name>
        </action>
        <action>
            <name>Insert</name>
            <api>
                <name>EstadoNovo</name>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="sigla" valueentity="sigla"/>
                <fromto valueapi="tenant" valueentity ="tenant" />
                <fromto valueapi="created_by" valueentity ="logged_user"/>
            </api>
        </action>
        <action>
            <name>Update</name>
            <api>
                <name>EstadoAlterar</name>
                <fromto valueapi="estado" valueentity="estado"/>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="sigla" valueentity="sigla"/>
                <fromto valueapi="tenant" valueentity ="tenant" />
                <fromto valueapi="updated_by" valueentity ="logged_user"/>
            </api>
        </action>
        <action>
            <name>Delete</name>
            <api>
                <name>EstadoExcluir</name>
                <fromto valueapi="estado" valueentity ="estado" />
                <fromto valueapi="tenant" valueentity ="tenant" />
            </api>
        </action>
    </actions>
</nsjusecase>
