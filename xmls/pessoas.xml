<?xml version="1.0" encoding="UTF-8"?>
<nsjusecase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/nasajon/mdatransformer/schemas/nsjusecase.xsd" name="pessoas" label="pessoas">
    <entity schema="treinamentos" table="pessoas">
        <fieldmodel name="pessoa" datatype="guid" isid="true" column="pessoa"/>
        <fieldmodel name="nome" datatype="string" column="nome"/>
        <fieldmodel name="cpf" datatype="string" column="cpf"/>
        <fieldmodel name="identidade" datatype="string" column="identidade"/>
        <fieldmodel name="endereco" datatype="string" column="endereco"/>
        <fieldmodel name="estado" datatype="integer" column="estado" useCaseLink="estados" entityJoinType="left"/>
        <fieldmodel name="cidade" datatype="integer" column="cidade" useCaseLink="cidades" entityJoinType="left"/>
        <fieldmodel name="tenant" datatype="integer" column="tenant" />
        <fieldmodel name="created_at" datatype="datetime" column="created_at" />
        <fieldmodel name="created_by" datatype="json" column="created_by" />
        <fieldmodel name="updated_at" datatype="datetime" column="updated_at" />
        <fieldmodel name="updated_by" datatype="json" column="updated_by" />
        <fieldmodel name="pessoascontatos" datatype="objectlist" column="pessoa" useCaseLink="pessoascontatos" entityJoinType="left" />
    </entity>
    <constructors>
        <constructoritem required="true">tenant</constructoritem>
    </constructors>
    <viewbrowser label="Pessoas" layout="list" paginate="true" target="builtin">
        <fieldsbrowser>
            <fieldbrowser entitylink="pessoa" isid="true" visible="false"/>
            <fieldbrowser entitylink="nome" visible="true" cansearch="true" />           
        </fieldsbrowser>
    </viewbrowser>
    <forms>
        <form name="default" label="Pessoas">
            <layout>
                <headerform>
                    <row>
                        <cell name="nome" controltype="textedit" label="Nome" colspan="6" entitylink="nome">
                            <validates>
                                <validate type="vnull" displaytext="O campo nome não pode ser vazio."/>
                            </validates>
                        </cell>
                        <cell name="cpf" controltype="cpf" label="CPF" colspan="3" entitylink="cpf">
                            <validates>
                                <validate type="vnull" displaytext="O campo CPF não pode ser vazio."/>
                            </validates>
                        </cell>
                        <cell name="identidade" controltype="textedit" label="Identidade" colspan="3" entitylink="identidade">
                        </cell>
                    </row>
                    <row>
                        <cell name="endereco" controltype="textedit" label="Endereço" colspan="7" entitylink="endereco">
                            <validates>
                                <validate type="vnull" displaytext="O campo Endereço não pode ser vazio."/>
                            </validates>
                        </cell>    
                        <cell name="estado" label="Estado" controltype="lookup" entitylink="estado" colspan="2" fielddetaillookup="sigla">
                            <validates>
                                <validate type="vnull" displaytext="O campo Estado não pode ser vazio."/>
                            </validates>
                        </cell>
                        <cell name="cidade" label="Cidade" controltype="lookup" entitylink="cidade" colspan="3" fielddetaillookup="nome">
                            <validates>
                                <validate type="vnull" displaytext="O campo Estado não pode ser vazio."/>
                            </validates>
                            <filter field="estado" condition="eq" entitylink="estado"/>
                        </cell>
                    </row>
                    <row>
                        <cell name="pessoascontatos" controltype="objectlist" entitylink="pessoascontatos" colspan="12" label="Contatos">
                         
                        </cell>
                    </row>
                </headerform>
            </layout>
        </form>
    </forms>
    <actions>
        <action>
            <name>retrieve</name>
        </action>
        <action>
            <name>Insert</name>
            <api>
                <name>PessoaNovo</name>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="cpf" valueentity="cpf"/>
                <fromto valueapi="identidade" valueentity="identidade"/>
                <fromto valueapi="endereco" valueentity="endereco"/>
                <fromto valueapi="estado" valueentity="estado"/>
                <fromto valueapi="cidade" valueentity="cidade"/>
                <fromto valueapi="tenant" valueentity ="tenant" />
                <fromto valueapi="created_by" valueentity ="logged_user"/>
                <fromto valueapi="pessoascontatos" valueentity ="pessoascontatos" />
            </api>
        </action>
        <action>
            <name>Update</name>
            <api>
                <name>PessoaAlterar</name>
                <fromto valueapi="pessoa" valueentity="pessoa"/>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="cpf" valueentity="cpf"/>
                <fromto valueapi="identidade" valueentity="identidade"/>
                <fromto valueapi="endereco" valueentity="endereco"/>
                <fromto valueapi="estado" valueentity="estado"/>
                <fromto valueapi="cidade" valueentity="cidade"/>
                <fromto valueapi="tenant" valueentity ="tenant" />
                <fromto valueapi="updated_by" valueentity ="logged_user"/>
                <fromto valueapi="pessoascontatos" valueentity ="pessoascontatos" />
            </api>
        </action>
        <action>
            <name>Delete</name>
            <api>
                <name>PessoaExcluir</name>
                <fromto valueapi="pessoa" valueentity ="pessoa" />
                <fromto valueapi="tenant" valueentity ="tenant" />
            </api>
        </action>
    </actions>
</nsjusecase>
