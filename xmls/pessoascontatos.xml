<?xml version="1.0" encoding="UTF-8"?>
<nsjusecase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/nasajon/mdatransformer/schemas/nsjusecase.xsd" name="pessoas" label="pessoas">
    <entity schema="treinamentos" table="pessoascontatos">
        <fieldmodel name="pessoacontato" datatype="guid" isid="true" column="pessoacontato"/>
        <fieldmodel name="nome" datatype="string" column="nome"/>
        <fieldmodel name="tipo" datatype="string" column="tipo"/>
        <fieldmodel name="telefone" datatype="string" column="telefone"/>        
        <fieldmodel name="pessoa" datatype="guid" column="pessoa" useCaseLink="pessoas" entityJoinType="left"/>
        <fieldmodel name="tenant" datatype="integer" column="tenant" />
        <fieldmodel name="created_at" datatype="datetime" column="created_at" />
        <fieldmodel name="created_by" datatype="json" column="created_by" />
    </entity>
        <constructors>
        <constructoritem required="true">pessoa</constructoritem>
        <constructoritem required="true">tenant</constructoritem>
    </constructors>
    <viewbrowser label="Contatos" layout="list" paginate="true" target="builtin">
        <fieldsbrowser>
            <fieldbrowser entitylink="pessoacontato" isid="true" visible="false"/>
            <fieldbrowser entitylink="pessoa" visible="true" cansearch="true" />
            <fieldbrowser entitylink="nome" visible="true" cansearch="true" />
            <fieldbrowser entitylink="tipo" visible="true" cansearch="true" />
            <fieldbrowser entitylink="telefone" visible="true" cansearch="true" />
        </fieldsbrowser>
    </viewbrowser>
    <forms>
        <form name="default" label="Contatos">
            <layout>
                <headerform>
                    <row>
                        <cell name="nome" controltype="textedit" label="Nome" colspan="6" entitylink="nome">
                            <validates>
                                <validate type="vnull" displaytext="O campo Nome não pode ser vazio."/>
                            </validates>
                        </cell>
                        <cell name="tipo" controltype="textedit" label="Tipo" colspan="3" entitylink="tipo">
                            <validates>
                                <validate type="vnull" displaytext="O campo Tipo não pode ser vazio."/>
                            </validates>
                        </cell>
                        <cell name="telefone" controltype="textedit" label="Telefone" colspan="3" entitylink="telefone">
                           <validates>
                                <validate type="vnull" displaytext="O campo Telefone não pode ser vazio."/>
                            </validates>
                        </cell>
                    </row>                  
                </headerform>
            </layout>
        </form>
    </forms>
    <actions>
        <action>
            <name>retrieve</name>
        </action>
        <action>
            <name>Insert</name>
            <api>
                <name>PessoaContatoNovo</name>
                <fromto valueapi="nome" valueentity="nome"/>
                <fromto valueapi="tipo" valueentity="tipo"/>
                <fromto valueapi="telefone" valueentity="telefone"/>
                <fromto valueapi="pessoa" valueentity="pessoa"/>      
                <fromto valueapi="tenant" valueentity ="tenant" />
                <fromto valueapi="created_by" valueentity ="logged_user"/>
            </api>
        </action>     
        <action>
            <name>Delete</name>
            <api>
                <name>PessoaContatoExcluir</name>
                <fromto valueapi="pessoacontato" valueentity ="pessoacontato" />
                <fromto valueapi="tenant" valueentity ="tenant" />
            </api>
        </action>
    </actions>
</nsjusecase>
